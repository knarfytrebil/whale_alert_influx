# Whale Alert API Configuration
WHALE_ALERT_KEY=your_whale_alert_api_key_here

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=your_organization
INFLUXDB_BUCKET=whale_alerts

# Whale Alert Subscription Settings
WHALE_ALERT_BLOCKCHAINS=bitcoin,ethereum,tron
WHALE_ALERT_SYMBOLS=BTC,USDT
WHALE_ALERT_MIN_VALUE_USD=1000000

# Market Signal Detection Configuration
# Time window for rolling net flow calculations (minutes)
ROLLING_WINDOW_MINUTES=60

# Threshold for significant net flows to trigger signals (USD)
NET_FLOW_THRESHOLD_USD=10000000

# Threshold for market maker transfers to trigger hedging signals (USD)
MM_TRANSFER_THRESHOLD_USD=5000000

# Maximum amount for confidence scoring (amounts above this get 100% confidence)
SIGNAL_CONFIDENCE_MAX_USD=20000000